{
  "name": "pm2-logrotate",
  "version": "2.2.1",
  "description": "Module to rotate logs of every pm2 application",
  "main": "app.js",
  "dependencies": {
    "graceful-fs": "^4.1.11",
    "moment-timezone": "^0.5.13",
    "node-schedule": "^1.2.3",
    "pm2": "latest",
    "pmx": "latest"
  },
  "scripts": {
    "test": "mocha tests"
  },
  "author": "Joni SHKURTI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pm2-hive/pm2-logrotate.git"
  },
  "bugs": {
    "url": "https://github.com/pm2-hive/pm2-logrotate/issues"
  },
  "homepage": "https://github.com/pm2-hive/pm2-logrotate",
  "license": "MIT",
  "apps": [
    {
      "name": "pm2-logrotate",
      "script": "app.js"
    }
  ],
  "config": {
    "max_size": "10M",
    "retain": "all",
    "compress": false,
    "dateFormat": "YYYY-MM-DD_HH-mm-ss",
    "workerInterval": "30",
    "rotateInterval": "0 0 * * *",
    "rotateModule": true
  },
  "devDependencies": {
    "async": "^2.5.0",
    "mocha": "^3.4.2"
  }
}
